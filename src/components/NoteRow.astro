---
import type { CollectionEntry } from "astro:content";
import { Date } from "./blogs/Date";
import { Link } from "./blogs/Link";

type Props = {
  post: CollectionEntry<"note">;
};

const {
  post: {
    data: { title, date },
    slug,
  },
} = Astro.props;

---

<article class="flex justify-between">
  <>
  <Link href={`/note/${slug}`}>
    {title}
  </Link>
  <Date date={date} />
  </>
</article>
