---
import type { CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"blog">;
};

const {
  post: {
    data: { title, date },
    slug,
  },
} = Astro.props;
---

<article class="flex justify-between">
  <a href={`/blog/${slug}`} class="links text-sm sm:text-base">
    <span>{title}</span>
  </a>

  <span class="text-xs sm:text-sm">{date}</span>
</article>
