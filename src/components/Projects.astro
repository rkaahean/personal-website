---
import type { Projects } from "../lib/projects";

type Props = {
  project: Projects;
};

const {
  project: { repo: name, description, link },
} = Astro.props;
---

<div class="w-fit flex flex-col">
  <a href={link} class="links">
    <span class="text-md">{name}</span>
  </a>
  <span class="pt-3 text-xs sm:text-sm text-slate-400">{description}</span>
</div>
