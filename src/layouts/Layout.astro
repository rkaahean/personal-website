---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource/inter";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <script
      defer
      src="https://umami-production-3192.up.railway.app/script.js"
      data-website-id="6c80e2ad-0804-4a50-9b48-d9954ec7bc3c"></script>
    <meta charset="UTF-8" />
    <meta name="description" content="Ranjan's Internet Home" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    background: #171818;
    background-size: 224px;
    background-image: radial-gradient(
      circle at 1px 1px,
      #232225 1px,
      transparent 0
    );
    background-size: 40px 40px;
  }

  body {
    @apply text-stone-300;
    font-family: "Inter";
  }

</style>
